<div class="container">
    <h2 class="mt-3">Products</h2>
    <hr>

    <div>
        <h4 class="d-inline-block">Filters: </h4>
        <form action="/filter" method="get" class="form-group d-inline-flex flex-row align-items-center">
            <select name="select" class="input-group mr-2">
                <option value="category">Category</option>
                <option value="color">Color</option>
            </select>
            <input type="text" name="search" class="form-control form-control-sm mr-2" value="{{search}}">
            <input type="submit" class="btn btn-info btn-sm" value="Filter">
        </form>
    </div>

    <ul class="list-group">
        {{#each products}}
            <li class="list-group-item">
                <a href='/products/{{_id}}'>{{title}}</a>
                <a href="#" data-id="{{_id}}" class="btn btn-outline-danger btn-sm float-right delete-product">Delete</a>
                <a class="btn btn-outline-success btn-sm float-right" href="/products/edit/{{_id}}" style="text-decoration:none">Edit</a>
                <a class="btn btn-outline-default btn-sm float-right" href="/products/{{_id}}" style="text-decoration:none">View</a>
            </li>
        {{/each}}
    </ul>
</div>